@model IEnumerable<Web.ViewModels.Invoice.InvoiceListVM>
@{
    ViewBag.Title = "Главная";
}
<div class="container">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="alert alert-danger fade in alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <div class="text-center">
                        <strong>@ViewBag.ErrorMessage</strong>
                    </div>
                </div>
            </div>
        </div>
    }
    @if (ViewBag.StatusMessage != null)
    {
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="alert alert-info fade in alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <div class="text-center">
                        @ViewBag.StatusMessage
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-blue">
                <div class="panel-body">
                    <div class="col-md-1">
                        <a asp-controller="Invoice" asp-action="Create" class='btn btn-primary' title="Добавить новую квитанцию">Добавить</a>
                    </div>
                    <div class="col-md-11">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Введите выражение для поиска..."/>
                            <span class="input-group-btn">
                                <button type="button" class="btn btn-primary"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @if (Model.Any())
    {
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-blue">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <i class="fa fa-tasks"></i> Последние 20 добавленных квитанций
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped search-table">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th class="hidden-xs">@Html.DisplayNameFor(x => x.Number)</th>
                                        <th>Документ</th>
                                        <th>@Html.DisplayNameFor(x => x.InvoiceDate)</th>
                                        <th>@Html.DisplayNameFor(x => x.Finance)</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <a class="btn btn-primary btn-xs" asp-controller="Invoice" asp-action="Detail" asp-route-id="@item.Id" title="Детальная информация о документе">
                                                    <i class="fa fa-info"></i>
                                                </a>
                                            </td>
                                            <td class="hidden-xs">@item.Number</td>
                                            <td>
                                                <h4>@item.KindName</h4>
                                                <small>@item.ProviderName</small>
                                            </td>
                                            <td>@item.InvoiceDate</td>
                                            <td>
                                                <span class="label label-@item.RowStyle">@Html.DisplayFor(x => item.Finance)</span>
                                            </td>
                                            <td class="text-center td-buttons">
                                                <a class="btn btn-danger btn-xs" asp-controller="Invoice" asp-action="Delete" asp-route-id="@item.Id" title="Удалить документ">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                                <a class="btn btn-warning btn-xs" asp-controller="Invoice" asp-action="Edit" asp-route-id="@item.Id" title="Изменить документ">
                                                    <i class="fa fa-pencil"></i>
                                                </a>
                                                <a class="btn btn-success btn-xs" asp-controller="Invoice" asp-action="Copy" asp-route-id="@item.Id" title="Скопировать документ">
                                                    <i class="fa fa-copy"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-warning alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <div class="text-center">
                        <strong>Ура. Счетов нет!</strong>
                    </div>
                </div>
            </div>
        </div>
    }
</div>